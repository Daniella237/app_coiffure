<div class="bg-white rounded-2xl shadow-lg p-8 card-hover border border-gray-100 h-96 flex flex-col">
	<div class="w-full h-36 mb-4 flex-shrink-0 overflow-hidden">
		<img src="{{ service.image }}" alt="{{ service.name }}" class="w-full h-full object-cover rounded-xl">
	</div>
	<div class="flex flex-col flex-grow">
		<h3 class="text-xl font-bold text-gray-900 mb-3">{{ service.name }}</h3>
		<p class="text-gray-600 mb-4 text-sm flex-grow">
			{{ service.description }}
		</p>
		<div class="flex items-center justify-between mt-auto">
			<span class="text-xl font-bold text-pink-500">À partir de
				{{ service.price }}€</span>
			<a href="/services" class="text-pink-500 hover:text-pink-600 font-semibold">Réserver →</a>
		</div>
	</div>
</div>
