{% extends 'base.html.twig' %}

{% block title %}Mes Rendez-vous | {{ employee.user.firstName }} {{ employee.user.lastName }}{% endblock %}

{% block body %}
    <header class="bg-gradient-to-r from-green-500 to-blue-600 text-white py-5 shadow-lg">
        <div class="max-w-7xl mx-auto px-5">
            <div class="flex justify-between items-center">
                <h1 class="text-2xl font-semibold">üë©‚Äçüíº Espace Employ√© - {{ employee.user.firstName }} {{ employee.user.lastName }}</h1>
                <nav class="hidden md:flex gap-4 items-center">
                    <a href="{{ path('employee_dashboard') }}" class="px-3 py-2 rounded-lg hover:bg-white/20 transition-colors">Tableau de bord</a>
                    <a href="{{ path('employee_appointments') }}" class="px-3 py-2 rounded-lg hover:bg-white/20 transition-colors">Mes Rendez-vous</a>
                    <a href="{{ path('admin_logout') }}" class="px-3 py-2 rounded-lg bg-white/20 border border-white/30">D√©connexion</a>
                </nav>
            </div>
        </div>
    </header>

    <main class="bg-gray-50 min-h-screen">
        <div class="max-w-7xl mx-auto px-5 py-8">
            <!-- Messages flash -->
            {% for message in app.flashes('success') %}
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-4">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-4">
                    {{ message }}
                </div>
            {% endfor %}

            <!-- En-t√™te de page -->
            <div class="flex justify-between items-center mb-8">
                <h1 class="text-3xl font-bold text-gray-800">Mes Rendez-vous</h1>
            </div>

            <!-- Filtres -->
            <div class="card mb-8">
                <div class="p-6">
                    <form method="GET" class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div>
                            <label for="date" class="form-label">Date</label>
                            <input type="date" id="date" name="date" value="{{ filters.date }}" class="form-input">
                        </div>
                        <div>
                            <label for="status" class="form-label">Statut</label>
                            <select id="status" name="status" class="form-input">
                                <option value="">Tous les statuts</option>
                                <option value="pending" {{ filters.status == 'pending' ? 'selected' : '' }}>En attente</option>
                                <option value="confirmed" {{ filters.status == 'confirmed' ? 'selected' : '' }}>Confirm√©</option>
                                <option value="completed" {{ filters.status == 'completed' ? 'selected' : '' }}>Termin√©</option>
                                <option value="cancelled" {{ filters.status == 'cancelled' ? 'selected' : '' }}>Annul√©</option>
                            </select>
                        </div>
                        <div class="flex items-end">
                            <button type="submit" class="btn btn-primary">Filtrer</button>
                            <a href="{{ path('employee_appointments') }}" class="btn btn-secondary ml-2">R√©initialiser</a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Liste des rendez-vous -->
            <div class="card">
                <div class="bg-gradient-to-r from-blue-500 to-blue-600 text-white px-6 py-4">
                    <h3 class="text-xl font-semibold">Liste des Rendez-vous</h3>
                </div>
                <div class="p-6">
                    {% if appointments|length > 0 %}
                        <div class="space-y-4">
                            {% for appointment in appointments %}
                                <div class="flex items-center justify-between p-6 bg-gray-50 rounded-lg hover:shadow-md transition-shadow">
                                    <div class="flex items-center space-x-4">
                                        <div class="text-3xl">
                                            {% if appointment.status == 'completed' %}‚úÖ
                                            {% elseif appointment.status == 'confirmed' %}üìÖ
                                            {% elseif appointment.status == 'pending' %}‚è≥
                                            {% elseif appointment.status == 'cancelled' %}‚ùå
                                            {% else %}üìã{% endif %}
                                        </div>
                                        <div>
                                            <h4 class="font-semibold text-gray-800 text-lg">
                                                {{ appointment.client.firstName }} {{ appointment.client.lastName }}
                                            </h4>
                                            <p class="text-gray-600">{{ appointment.service.name }}</p>
                                            <p class="text-gray-500 text-sm">
                                                {{ appointment.appointmentDate|date('d/m/Y √† H:i') }} - {{ appointment.durationMinutes }} min
                                            </p>
                                            {% if appointment.notes %}
                                                <p class="text-gray-500 text-sm italic mt-1">{{ appointment.notes }}</p>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="flex items-center space-x-2">
                                        <span class="px-3 py-1 rounded-full text-xs font-semibold
                                            {% if appointment.status == 'completed' %}bg-green-100 text-green-800
                                            {% elseif appointment.status == 'confirmed' %}bg-blue-100 text-blue-800
                                            {% elseif appointment.status == 'pending' %}bg-yellow-100 text-yellow-800
                                            {% elseif appointment.status == 'cancelled' %}bg-red-100 text-red-800
                                            {% else %}bg-gray-100 text-gray-800{% endif %}">
                                            {{ appointment.status|upper }}
                                        </span>
                                        <a href="{{ path('employee_appointment_show', {'id': appointment.id}) }}" 
                                           class="btn btn-small btn-secondary-small">
                                            Voir
                                        </a>
                                        {% if appointment.status in ['pending', 'confirmed'] %}
                                            <a href="{{ path('employee_appointment_edit', {'id': appointment.id}) }}" 
                                               class="btn btn-small btn-primary-small">
                                                Modifier
                                            </a>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="text-center py-12">
                            <div class="text-6xl mb-4">üìÖ</div>
                            <h3 class="text-xl font-semibold text-gray-800 mb-2">Aucun rendez-vous trouv√©</h3>
                            <p class="text-gray-600">Aucun rendez-vous ne correspond √† vos crit√®res de recherche.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </main>
{% endblock %} 