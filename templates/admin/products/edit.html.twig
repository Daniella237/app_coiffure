{% extends 'admin/base.html.twig' %}

{% block title %}Modifier le Produit | Admin{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-gray-800">Modifier le Produit</h1>
        <a href="{{ path('admin_products') }}" class="btn btn-outline flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            <span>Retour à la liste</span>
        </a>
    </div>

    <div class="max-w-2xl mx-auto">
        <div class="card p-8">
            <form method="post">
                <div class="mb-6">
                    <label for="name" class="block font-semibold mb-2">Nom du produit</label>
                    <input type="text" id="name" name="name" class="form-input w-full" value="{{ product.name }}" required>
                </div>
                <div class="mb-6">
                    <label for="description" class="block font-semibold mb-2">Description</label>
                    <textarea id="description" name="description" class="form-textarea w-full" rows="3">{{ product.description }}</textarea>
                </div>
                <div class="mb-6 grid grid-cols-2 gap-4">
                    <div>
                        <label for="price" class="block font-semibold mb-2">Prix (€)</label>
                        <input type="number" step="0.01" id="price" name="price" class="form-input w-full" value="{{ product.price }}" required>
                    </div>
                    <div>
                        <label for="stock_quantity" class="block font-semibold mb-2">Stock</label>
                        <input type="number" id="stock_quantity" name="stock_quantity" class="form-input w-full" value="{{ product.stockQuantity }}" required>
                    </div>
                </div>
                <div class="mb-6">
                    <label for="sku" class="block font-semibold mb-2">SKU</label>
                    <input type="text" id="sku" name="sku" class="form-input w-full" value="{{ product.sku }}" required>
                </div>
                <div class="mb-6">
                    <label for="category" class="block font-semibold mb-2">Catégorie</label>
                    <select id="category" name="category" class="form-select w-full" required>
                        {% for cat in categories %}
                            <option value="{{ cat.id }}" {% if product.category.id == cat.id %}selected{% endif %}>{{ cat.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="mb-6 flex items-center gap-2">
                    <input type="checkbox" id="is_active" name="is_active" value="1" {% if product.isActive %}checked{% endif %}>
                    <label for="is_active" class="font-semibold">Actif</label>
                </div>
                <div class="flex justify-end gap-2">
                    <a href="{{ path('admin_products') }}" class="btn btn-outline">Annuler</a>
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
