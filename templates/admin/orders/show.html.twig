{% block title %}D√©tails de la Commande | Admin{% endblock %}

{% block content %}
    <div class="max-w-6xl mx-auto space-y-6">
        <!-- Messages flash -->
        <div class="space-y-3">
            {% for message in app.flashes('success') %}
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg">
                    {{ message }}
                </div>
            {% endfor %}
        </div>

        <!-- En-t√™te de page -->
        <div class="flex justify-between items-center">
            <h1 class="text-3xl font-bold text-gray-800">üìã D√©tails de la Commande</h1>
            <a href="{{ path('admin_orders') }}" class="btn-secondary">
                ‚Üê Retour
            </a>
        </div>

        <!-- D√©tails de la commande -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Informations principales -->
            <div class="lg:col-span-2 space-y-6">
                <!-- En-t√™te de la commande -->
                <div class="bg-white rounded-xl shadow-lg p-8">
                    <div class="flex justify-between items-start mb-8 pb-6 border-b-2 border-gray-100">
                        <div>
                            <div class="text-2xl font-bold text-indigo-600 mb-2">#{{ order.orderNumber }}</div>
                            <div class="text-sm text-gray-600">Cr√©√©e le {{ order.createdAt|date('d/m/Y √† H:i') }}</div>
                        </div>
                    </div>

                    <!-- Statut de la commande -->
                    <div class="mb-8">
                        <h3 class="text-lg font-semibold text-gray-800 mb-4 pb-3 border-b border-gray-200">
                            Statut de la commande
                        </h3>
                        <div class="flex items-center gap-4 mb-6">
                            <span class="px-4 py-2 rounded-full text-sm font-semibold uppercase
                                {% if order.status == 'pending' %}
                                    bg-yellow-100 text-yellow-800
                                {% elseif order.status == 'processing' %}
                                    bg-blue-100 text-blue-800
                                {% elseif order.status == 'shipped' %}
                                    bg-green-100 text-green-800
                                {% elseif order.status == 'delivered' %}
                                    bg-teal-100 text-teal-800
                                {% elseif order.status == 'cancelled' %}
                                    bg-red-100 text-red-800
                                {% else %}
                                    bg-gray-100 text-gray-800
                                {% endif %}">
                                {% if order.status == 'pending' %}En attente
                                {% elseif order.status == 'processing' %}En pr√©paration
                                {% elseif order.status == 'shipped' %}Exp√©di√©e
                                {% elseif order.status == 'delivered' %}Livr√©e
                                {% elseif order.status == 'cancelled' %}Annul√©e
                                {% else %}{{ order.status }}{% endif %}
                            </span>
                        </div>
                        
                        <!-- Formulaire de changement de statut -->
                        <div class="bg-gray-50 p-6 rounded-lg">
                            <form method="POST" action="{{ path('admin_order_update_status', {id: order.id}) }}">
                                <div class="mb-4">
                                    <label for="status" class="block font-semibold text-gray-700 mb-2">
                                        Changer le statut :
                                    </label>
                                    <select name="status" id="status" required 
                                            class="w-full px-3 py-2 border-2 border-gray-200 rounded-lg text-sm focus:border-indigo-500 focus:outline-none">
                                        <option value="pending" {{ order.status == 'pending' ? 'selected' : '' }}>En attente</option>
                                        <option value="processing" {{ order.status == 'processing' ? 'selected' : '' }}>En pr√©paration</option>
                                        <option value="shipped" {{ order.status == 'shipped' ? 'selected' : '' }}>Exp√©di√©e</option>
                                        <option value="delivered" {{ order.status == 'delivered' ? 'selected' : '' }}>Livr√©e</option>
                                        <option value="cancelled" {{ order.status == 'cancelled' ? 'selected' : '' }}>Annul√©e</option>
                                    </select>
                                </div>
                                <div class="flex gap-3">
                                    <button type="submit" class="btn-success-small">
                                        Mettre √† jour
                                    </button>
                                </div>
                            </form>
                        </div>
